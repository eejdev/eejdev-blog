---
import '../styles/global.css';
---

<html lang="en" data-theme="discolysium">
  <head>
    <meta charset="utf-8" />
    <title>DaisyUI Test</title>
  </head>
  <body class="bg-base-100 text-base-content p-8 space-y-6">
    <h1 class="text-4xl font-bold text-primary">Discolysium Theme Test</h1>
    <p>This is a test with DaisyUI and a custom theme.</p>

    <div class="flex gap-4">
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-accent">Accent</button>
    </div>

    <div class="card bg-base-100 text-base-content shadow-md w-96">
      <div class="card-body">
        <h2 class="card-title">Card Title</h2>
        <p>This card uses neutral/base colors.</p>
      </div>
    </div>
  </body>
</html>

